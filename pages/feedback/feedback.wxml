<view class="tit">意见反馈</view>
<form bindsubmit="submitSuggestion" class="sug-area confirm" report-submit="true">
  <view class="b">意见：</view>
  <textarea name="content" placeholder="请输入您的意见" />
  <view class="b">联系电话：</view>
  <input type="number" name="contactmobile" value="{{phone}}" placeholder="请输入您的联系电话" />
  <button type="primary" class="confirm-btn" formType="submit">提交</button>
</form>
<!--登陆/注册/忘记密码-->
<import src="../../components/login/login.wxml" />
<template is="login" data="{{showLoginModal,loginType,countDownSeconds,phoneNumber,messageCode,password}}" />